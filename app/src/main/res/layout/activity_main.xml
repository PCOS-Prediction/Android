<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="93dp"
        tools:layout_editor_absoluteY="43dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardUseCompatPadding="true"
                android:layout_margin="8dp"
                app:cardCornerRadius="8dp"
                app:contentPadding="6dp"
                android:elevation="6dp" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/age" />

                    <RadioGroup
                        android:id="@+id/rdg_age"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <RadioButton
                            android:id="@+id/rdb_age_0"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/age_0" />

                        <RadioButton
                            android:id="@+id/rdb_age_1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/age_1" />

                        <RadioButton
                            android:id="@+id/rdb_age_2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/age_2" />

                        <RadioButton
                            android:id="@+id/rdb_age_3"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/age_3" />

                        <RadioButton
                            android:id="@+id/rdb_age_4"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/age_4" />

                        <RadioButton
                            android:id="@+id/rdb_age_5"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/age_5" />

                        <RadioButton
                            android:id="@+id/rdb_age_6"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/age_6" />
                    </RadioGroup>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/bmi"/>

                    <Spinner
                        android:id="@+id/spn_bmi"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:entries="@array/maybe_list"
                        android:prompt="@string/spinner_prompt" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/weight_gain_or_lose" />

                    <Spinner
                        android:id="@+id/spn_weight"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:entries="@array/yes_or_no_list"
                        android:prompt="@string/spinner_prompt" />

                </LinearLayout>


            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardUseCompatPadding="true"
                android:layout_margin="8dp"
                app:cardCornerRadius="8dp"
                app:contentPadding="6dp"
                android:elevation="6dp" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/period_length" />

                    <RadioGroup
                        android:id="@+id/rdg_period_length"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <RadioButton
                            android:id="@+id/rdb_pl_0"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/period_length_0" />

                        <RadioButton
                            android:id="@+id/rdb_pl_1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/period_length_1" />

                        <RadioButton
                            android:id="@+id/rdb_pl_2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/period_length_2" />

                        <RadioButton
                            android:id="@+id/rdb_pl_3"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/period_length_3" />
                    </RadioGroup>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/cycle_length" />

                    <RadioGroup
                        android:id="@+id/rdg_cycle_length"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <RadioButton
                            android:id="@+id/rdb_cl_0"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/cycle_length_0" />

                        <RadioButton
                            android:id="@+id/rdb_cl_1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/cycle_length_1" />

                        <RadioButton
                            android:id="@+id/rdb_cl_2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/cycle_length_2" />

                        <RadioButton
                            android:id="@+id/rdb_cl_3"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/cycle_length_3" />

                        <RadioButton
                            android:id="@+id/rdb_cl_4"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/cycle_length_4" />
                    </RadioGroup>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/irregular_or_missed_periods" />

                    <Spinner
                        android:id="@+id/spn_missed_periods"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:entries="@array/not_applicable_list"
                        android:prompt="@string/spinner_prompt" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/difficulty_in_conceiving" />

                    <Spinner
                        android:id="@+id/spn_conceiving"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:entries="@array/not_applicable_list"
                        android:prompt="@string/spinner_prompt" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardUseCompatPadding="true"
                android:layout_margin="8dp"
                app:cardCornerRadius="8dp"
                app:contentPadding="6dp"
                android:elevation="6dp" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/hair_growth" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/chin" />

                    <RadioGroup
                        android:id="@+id/rdg_chin"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="3">

                        <RadioButton
                            android:id="@+id/rdb_chin_normal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/normal" />

                        <RadioButton
                            android:id="@+id/rdb_chin_moderate"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/moderate" />

                        <RadioButton
                            android:id="@+id/rdb_chin_excessive"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/excessive" />
                    </RadioGroup>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/cheeks" />

                    <RadioGroup
                        android:id="@+id/rdg_cheeks"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="3">

                        <RadioButton
                            android:id="@+id/rdb_cheeks_normal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/normal" />

                        <RadioButton
                            android:id="@+id/rdb_cheeks_moderate"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/moderate" />

                        <RadioButton
                            android:id="@+id/rdb_cheeks_excessive"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/excessive" />
                    </RadioGroup>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/between_breasts" />

                    <RadioGroup
                        android:id="@+id/rdg_breasts"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="3">

                        <RadioButton
                            android:id="@+id/rdb_breasts_normal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/normal" />

                        <RadioButton
                            android:id="@+id/rdb_breasts_moderate"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/moderate" />

                        <RadioButton
                            android:id="@+id/rdb_breasts_excessive"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/excessive" />
                    </RadioGroup>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/upper_lips" />

                    <RadioGroup
                        android:id="@+id/rdg_lips"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="3">

                        <RadioButton
                            android:id="@+id/rdb_lips_normal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/normal" />

                        <RadioButton
                            android:id="@+id/rdb_lips_moderate"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/moderate" />

                        <RadioButton
                            android:id="@+id/rdb_lips_excessive"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/excessive" />
                    </RadioGroup>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/arms" />

                    <RadioGroup
                        android:id="@+id/rdg_arms"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="3">

                        <RadioButton
                            android:id="@+id/rdb_arms_normal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/normal" />

                        <RadioButton
                            android:id="@+id/rdb_arms_moderate"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/moderate" />

                        <RadioButton
                            android:id="@+id/excessive"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/excessive" />
                    </RadioGroup>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/inner_thighs" />

                    <RadioGroup
                        android:id="@+id/rdg_inner_thighs"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="3">

                        <RadioButton
                            android:id="@+id/rdb_thighs_normal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/normal" />

                        <RadioButton
                            android:id="@+id/rdb_thighs_moderate"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/moderate" />

                        <RadioButton
                            android:id="@+id/rdb_thighs_excessive"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/excessive" />
                    </RadioGroup>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/acne_or_skin_tags" />

                    <Spinner
                        android:id="@+id/spn_acne"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:entries="@array/yes_or_no_list"
                        android:prompt="@string/spinner_prompt" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/hair_thinning_or_hair_loss" />

                    <Spinner
                        android:id="@+id/spn_hair_loss"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:entries="@array/yes_or_no_list"
                        android:prompt="@string/spinner_prompt" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/dark_patches" />

                    <Spinner
                        android:id="@+id/spn_dark_patches"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:entries="@array/yes_or_no_list"
                        android:prompt="@string/spinner_prompt" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/feeling_of_tiredness" />

                    <Spinner
                        android:id="@+id/spn_tired"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:entries="@array/yes_or_no_list"
                        android:prompt="@string/spinner_prompt" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/mood_swings" />

                    <Spinner
                        android:id="@+id/spn_mood_swings"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:entries="@array/yes_or_no_list"
                        android:prompt="@string/spinner_prompt" />

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardUseCompatPadding="true"
                android:layout_margin="8dp"
                app:cardCornerRadius="8dp"
                app:contentPadding="6dp"
                android:elevation="6dp" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/exercise" />

                    <androidx.appcompat.widget.AppCompatSeekBar
                        android:id="@+id/sb_exercise"
                        style="@style/Widget.AppCompat.SeekBar.Discrete"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:max="7"
                        android:padding="10dp">

                    </androidx.appcompat.widget.AppCompatSeekBar>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/eat_outside" />

                    <androidx.appcompat.widget.AppCompatSeekBar
                        android:id="@+id/sb_eat_outside"
                        style="@style/Widget.AppCompat.SeekBar.Discrete"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:max="7"
                        android:padding="10dp">

                    </androidx.appcompat.widget.AppCompatSeekBar>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/canned_food" />

                    <Spinner
                        android:id="@+id/spn_canned_food"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:entries="@array/yes_or_no_list"
                        android:prompt="@string/spinner_prompt" />

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_submit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/submit" />


        </LinearLayout>

    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>